

{% block head %}
    <title>{% block title %}Log In{% endblock %}</title>
    <link rel="icon" href="{{ asset('/imgs/slogo.svg')}}">
    {% block stylesheets %}
        <link href="{{ asset('css/BaseStyle.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/LogInStyle.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
{% endblock %}



{% block body %}

    <div class="behind">
        <img src="{{ absolute_url(asset('imgs/logo.png')) }}" alt="ECOPOWRRR!"/>
    </div>

    <form action="{{ path('app_login') }}" method="post">
        <h3>Log In</h3>
            
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="inputEmail">Email:</label>
        <input type="email" placeholder="Email" id="inputEmail" name="_username" value="{{ last_username }}" required autofocus>

        <label for="inputPassword">Password:</label>
        <input type="password" placeholder="Password" id="inputPassword" name="_password" required>

        
        <div class="option">
            <button class="login" type="submit">Log In</button>
            <button class="signup">Sign up</button>
        </div>

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >
    </form>


{% endblock %}
